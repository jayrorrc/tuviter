<div class="row">
    <% @posts.each do |post| %>
        <% user = User.find(post.user_id) %>
        <div class="col s6">
            <div class="card blue-grey lighten-5">
                <div class="card-content black-text">
                    <span class="card-title"><%= user.name %>: <%= post.title %></span>
                    <p>
                        <strong>Description:</strong>
                        <%= post.description %>
                    </p>
                </div>
                <div class="card-action">
                    <div class="row">
                        <div class="col">
                            <%= link_to 'Edit', edit_post_path(post) %>
                        </div>
                        <div class="col right">
                            <%= link_to 'Show', post %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <% end %>
</div>

<div class="row">
    <div class="col s11">
        <div class="card blue-grey lighten-5">
            <div class="card-content black-text">
                <span class="card-title">Editing Post</span>
                    <%= render 'form' %>
            </div>
        </div>
    </div>
    <div class="col s1">
        <div class="col s1 m1 bottom">
            <div class="fixed-action-btn" style="bottom: 45px; right: 24px;">
                <a class="btn-floating btn-large waves-effect waves-light blue-grey darken-4">
                    <i class="material-icons">settings</i>
                </a>
                <ul>
                    <li><a class="btn-floating blue-grey darken-3" href="/posts/<%= @post.id %>"><i class="material-icons">description</i></a></li>
                    <li><a class="btn-floating blue-grey darken-2" href="<%= posts_path %>"><i class="material-icons">list</i></a></li>
                </ul>
            </div>
        </div>
    </div>
</div>